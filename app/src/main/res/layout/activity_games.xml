<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games">

    <ImageView
        android:id="@+id/GamesBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/KBC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvQues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/round"
            android:backgroundTint="#273c2c"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="20dp"
            android:text="Hello how are you"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.267" />

        <LinearLayout
            android:id="@+id/op1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQues">

            <TextView
                android:id="@+id/tvop1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round"
                android:backgroundTint="#273c2c"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="20dp"
                android:tag="1"
                android:text="Hello how are you"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvop2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/round"
                android:backgroundTint="#273c2c"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="20dp"
                android:tag="2"
                android:text="Hello how are you"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/op3_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/op1_2">

            <TextView
                android:id="@+id/tvop3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round"
                android:backgroundTint="#273c2c"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="20dp"
                android:tag="3"
                android:text="Hello how are you"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvop4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/round"
                android:backgroundTint="#273c2c"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="20dp"
                android:tag="4"
                android:text="Hello how are you"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/GuessCalorie"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnrest"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:background="@drawable/round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.272" />

        <EditText
            android:id="@+id/et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:hint="Guess the calorie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGuess"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Guess"
            android:background="@drawable/round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.387" />




    </LinearLayout>

    <GridLayout
        android:visibility="gone"
        android:id="@+id/grid"
        android:layout_width="409dp"
        android:layout_height="409dp"
        android:background="@drawable/board"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_column="0"
            android:layout_row="0"
            android:tag="1"
            android:onClick="dip"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="35dp"
            android:layout_column="1"
            android:layout_row="0"
            android:tag="2"
            android:onClick="dip"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="15dp"
            android:layout_column="2"
            android:layout_row="0"
            android:tag="3"
            android:onClick="dip"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:layout_row="1"
            android:tag="4"
            android:onClick="dip"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="27dp"
            android:layout_marginLeft="35dp"
            android:tag="5"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="dip"/>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="27dp"
            android:tag="6"
            android:layout_marginLeft="15dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="dip"/>
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:layout_row="2"
            android:tag="7"
            android:onClick="dip"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="18dp"
            android:layout_marginLeft="35dp"
            android:layout_column="1"
            android:layout_row="2"
            android:tag="8"
            android:onClick="dip"/>
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="18dp"
            android:layout_marginLeft="15dp"
            android:layout_column="2"
            android:layout_row="2"
            android:tag="9"
            android:onClick="dip"/>


    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>