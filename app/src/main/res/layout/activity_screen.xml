<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:backgroundTint="#f3f7f6"
    tools:context=".Screen"

    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ivMain"
        android:src="@drawable/logo_main"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/share"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"

        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView

        android:id="@+id/ivmenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/menu"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"

        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/cvNavigation">






        <ScrollView
            android:id="@+id/svContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >




            <LinearLayout
                android:visibility="gone"
                android:id="@+id/Games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/round"
                    android:padding="20dp"
                    android:backgroundTint="#f3f7f6">

                    <ImageView
                        android:layout_width="130dp"
                        android:background="@drawable/round"
                        android:layout_height="130dp"
                        android:src="@drawable/account"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#273c2c"
                            android:layout_marginStart="10dp"
                            android:text="Mario."
                            android:textSize="30sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#273c2c"
                            android:layout_marginStart="10dp"
                            android:text="An adventure Game"
                            android:textSize="20sp"/>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/round"
                    android:padding="20dp"
                    android:backgroundTint="#f3f7f6">

                    <ImageView
                        android:layout_width="130dp"
                        android:background="@drawable/round"
                        android:layout_height="130dp"
                        android:src="@drawable/account"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/round"
                    android:padding="20dp"
                    android:backgroundTint="#f3f7f6">

                    <ImageView
                        android:layout_width="130dp"
                        android:background="@drawable/round"
                        android:layout_height="130dp"
                        android:src="@drawable/account"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/round"
                    android:padding="20dp"
                    android:backgroundTint="#f3f7f6">

                    <ImageView
                        android:layout_width="130dp"
                        android:background="@drawable/round"
                        android:layout_height="130dp"
                        android:src="@drawable/account"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/round"
                    android:padding="20dp"
                    android:backgroundTint="#f3f7f6">

                    <ImageView
                        android:layout_width="130dp"
                        android:background="@drawable/round"
                        android:layout_height="130dp"
                        android:src="@drawable/account"/>
                </LinearLayout>

            </LinearLayout>





        </ScrollView>


    </LinearLayout>





    <androidx.cardview.widget.CardView
        android:id="@+id/cvNavigation"
        android:weightSum="5"

        android:backgroundTint="#fccda3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="0dp"
            android:layout_margin="15dp"
            android:weightSum="5"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/home"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:text="Home"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/game"
                android:text="Weather"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/wifi_light"
                android:text="Explore"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/lnews"
                android:text="News"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/account"
                android:text="Account"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>